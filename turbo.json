{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env*", "**/.dev*"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:web": {
      "cache": false,
      "persistent": true
    },
    "preview": {
      "persistent": true
    },
    "deploy:preview": {
      "dependsOn": ["^build"]
    },
    "deploy:production": {
      "dependsOn": ["^build"]
    }
  }
}
