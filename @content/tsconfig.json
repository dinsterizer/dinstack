{
  "compilerOptions": {
    "outDir": "build",
    "target": "es2021",
    "lib": ["es2021", "DOM", "DOM.Iterable"],
    "types": ["@total-typescript/ts-reset"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@content/*": ["./*"],
      "@web/*": ["../@web/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    "build",
    "out",
    "tailwind.config.ts",
    "postcss.config.js",
    "next.config.ts"
  ],
  "references": [
    {
      "path": "../@web/tsconfig.json"
    }
  ]
}
