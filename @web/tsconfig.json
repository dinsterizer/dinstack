{
  "extends": "@dinstack/tsconfig/react.json",
  "compilerOptions": {
    "composite": false,
    "declarationMap": false,
    "outDir": "build",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@web/*": ["./*"],
      "@api/*": ["../@api/*"],
      "+shared/*": ["../+shared/*"],
      "+db/*": ["../+db/*"],
      "+ui/*": ["../+ui/*"],
      "+ui/_/../ui/*": ["../+ui/ui/*"]
    },
    "noEmit": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next", "tailwind.config.ts"],
  "references": [
    {
      "path": "../@api/tsconfig.json"
    },
    {
      "path": "../+shared/tsconfig.json"
    },
    {
      "path": "../+db/tsconfig.json"
    },
    {
      "path": "../+ui/tsconfig.json"
    }
  ]
}
