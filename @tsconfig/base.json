{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "target": "es2021",
    "useDefineForClassFields": true,
    "lib": ["es2021"],
    "module": "ESNext",
    "skipLibCheck": true,
    "incremental": true,

    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "allowJs": true,

    "strict": true,
    "noUncheckedIndexedAccess": true
  }
}
